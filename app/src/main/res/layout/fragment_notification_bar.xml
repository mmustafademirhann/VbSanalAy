<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".presentation.fragments.NotificationBarFragment">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification
        dasınız"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_header"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/addButtonMs4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/ekle"
                android:backgroundTintMode="add"
                android:text="+"
                android:textSize="@dimen/text_header"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/bottombartwo"
                android:orientation="horizontal"
                android:weightSum="5">

                <!-- First ImageView on the left -->
                <ImageView
                    android:id="@+id/homeImageViewN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/homeicon" />

                <!-- Second ImageView on the left -->
                <ImageView
                    android:id="@+id/messageImageViewN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/messagetwoicon" />

                <!-- Empty space in the middle -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- First ImageView on the right -->
                <ImageView
                    android:id="@+id/userImageViewN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/usericon" />

                <!-- Second ImageView on the right -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/notificationImageViewN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/notificationbarview" />

                    <!-- Line below the notification icon -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:elevation="60dp"
                        android:shadowColor="#635A8F"
                        android:shadowDx="1"
                        android:shadowDy="3"
                        android:layout_marginTop="4dp"
                        android:background="#635A8F" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


</FrameLayout>