<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morcitymes"
    tools:context=".presentation.fragments.MessageFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTextText3Ms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:layout_weight="1"
        android:background="@drawable/drawble_fr_button"
        android:ems="10"
        android:hint="ara"
        android:inputType="text"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!-- Bottom Navigation with Center Button -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storyRecyclerViewMs"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextText3Ms"
        tools:listitem="@layout/story_template" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"

        android:layout_marginEnd="55dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bacgroundforpost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storyRecyclerViewMs"
        tools:listitem="@layout/message_item" />



</androidx.constraintlayout.widget.ConstraintLayout>



