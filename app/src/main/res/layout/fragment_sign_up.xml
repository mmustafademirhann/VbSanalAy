<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".presentation.fragments.SignUpFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:foregroundGravity="left"
                    android:src="@drawable/kaydol" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:hint="Adınız"

                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                     />

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Soyadınız"
                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">


                <EditText
                    android:id="@+id/etMail"
                    android:layout_marginTop="20dp"
                    android:hint="Email/telefon numarası"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/editTextNumberPassword2"

                    android:layout_marginTop="20dp"
                    android:hint="Şifre"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="numberPassword" />

                <EditText
                    android:id="@+id/editTextNumberPassword3"
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="Şifre tekrar"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="numberPassword" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="3">

                        <!-- Left aligned RadioButton -->
                        <RadioButton
                            android:layout_marginEnd="20dp"
                            android:id="@+id/radio_male"

                            style="@style/CustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="start"
                            android:text="Erkek"/>

                        <!-- Center aligned RadioButton -->
                        <RadioButton
                            android:id="@+id/radio_others"
                            android:layout_marginEnd="10dp"
                            style="@style/CustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="Diğer.."/>

                        <!-- Right aligned RadioButton -->
                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_marginStart="10dp"
                            style="@style/CustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="end"
                            android:text="Kadın"/>

                    </RadioGroup>

                </LinearLayout>




                <Button
                    android:id="@+id/btnRegister"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawble_fr_button"
                    android:text="Sign Up"/>
            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>