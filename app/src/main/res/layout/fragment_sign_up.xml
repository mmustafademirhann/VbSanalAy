<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".presentation.SignUpFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:foregroundGravity="left"
                    android:src="@drawable/kaydol" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginRight="10sp"
                    android:hint="Adınız"

                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                     />

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:hint="Soyadınız"
                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/etMail"
                    android:layout_marginTop="20sp"
                    android:hint="Email/telefon numarası"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"

                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/editTextNumberPassword2"

                    android:layout_marginTop="20sp"
                    android:hint="Şifre"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:ems="10"
                    android:inputType="numberPassword" />

                <EditText
                    android:id="@+id/editTextNumberPassword3"
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:hint="Şifre tekrar"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:inputType="numberPassword" />


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    >

                    <RadioButton
                        android:id="@+id/radio_male"
                        style="@style/CustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Erkek"/>
                         />

                    <RadioButton
                        android:id="@+id/radio_female"
                        style="@style/CustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kadın"/>
                        />

                    <RadioButton
                        android:id="@+id/radio_others"
                        style="@style/CustomRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diğer.."/>
                         />
                </RadioGroup>


                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"/>
            </LinearLayout>



        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>